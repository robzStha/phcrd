<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gov.phcrevitalization">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LandingActivity"
            android:label="@string/dashboard" />
        <activity android:name=".activities.WebViewActivity" />
        <activity
            android:name=".activities.ProgramsActivity"
            android:label="@string/programs" />
        <activity android:name=".activities.LocalWebViewActivity" />
        <activity android:name=".activities.ListingAndDownloadingActivity"></activity>
    </application>

</manifest>